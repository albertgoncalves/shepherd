#!/usr/bin/env bash

export WD=$PWD

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

if [ ! -f "$WD/.jsinit" ]; then
    npm install --save-dev jshint
    touch "$WD/.jsinit"
fi

fmt () {
    for x in "$WD"/src/*.html; do
        printf "$ tidy %s\n" "$x"
        tidy -config "$WD/.tidyrc" -q -m "$x"
        sed -i 's/[ \t]\+$//' "$x"
    done
    for x in "$WD"/src/js/*.js; do
        printf "$ jshint %s\n" "$x"
        "$WD/node_modules/jshint/bin/jshint" -c "$WD/.jshintrc" "$x"
        printf "$ clang-format %s\n" "$x"
        clang-format -i "$x"
    done
}

export -f fmt
